<Window x:Class="Chess.GamMode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess"
        mc:Ignorable="d"
        Title="Game Mode Select" 
        Height="150" 
        Width="300"
        MinHeight="50"
        MinWidth="300"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Button Name="traditionalButton" Click="traditional_Click" IsDefault="True" Margin="0,1,-0.4,80.8">
            Traditional
        </Button>
        <Button Name="chess960Button" Click="chess960_CLick" Margin="1,40,-0.4,39.8">
            Chess960
        </Button>
        <Button Name="cancleButton" Click="cancel_Click" Margin="1,81,-0.4,-0.2">
            Cancel
        </Button>
    </Grid>
</Window>
